@model Product

@{
    ViewData["Title"] = "Product Page";
}


<h1>Product</h1>

<div class="row">        
    <div class="col-3">
        Name
    </div>
    <div class="col-3">
        InStockQuantity
    </div>
    <div class="col-3">
        InStockQuantity
    </div>
    <div class="col-3">
        Available Stock
    </div>
</div>
<div class="row">        
    <div class="col-3">
        @Model.Name
    </div>
    <div class="col-3">
         @Model.InStockQuantity
    </div>
    <div class="col-3">
        @Model.ReservedQuantity
    </div>
    <div class="col-3">
        @{
            int qty = @Model.InStockQuantity - @Model.ReservedQuantity;
        }
        @qty
    </div>
</div>